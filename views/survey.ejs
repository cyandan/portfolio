<!DOCTYPE html>
<html>
<head>
	<title>Survey Form</title>

    <!-- BOOTSTRAP -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

	<!-- CSS -->
	<link rel="stylesheet" type="text/css" href="/stylesheets/survey.css">
</head>
<body>

<!-- TITLE -->
<h1 id="title">Survey Form</h1>

<div id="main" class="container">
	<p id="description">Let us know how we can improve.</p>

	<!-- FORM -->
	<form id="survey-form" action="" method="">

		<!-- NAME -->
		<div class="form-group">
			<label for="name">Name:</label>
			<input type="text" id="name" name="name" class="form-control" placeholder="Enter your name" required>
		</div>
		
		<!-- EMAIL -->
		<div class="form-group">
			<label for="email">Email:</label>
			<input type="email" id="email" name="email" class="form-control" placeholder="Enter your email address" required>
		</div>

		<!-- AGE -->
		<div class="form-group">
			<label for="number">Age:</label>
			<input type="number" id="number" name="age" class="form-control" min="0" max="125" placeholder="Select your age">
		</div>

		<!-- DROPDOWN -->
		<div class="form-group">
			<label for="dropdown">
				How much do you like this app?
			</label>
	    	<select class="form-control" id="dropdown" name="dropdown">
	      		<option>A Lot</option>
	      		<option>A Little</option>
	      		<option>Not At All</option>
	      		<option>Not Sure</option>
	      		<option>Prefer Not To Say</option>
	    	</select>
		</div>
		
	    <!-- RADIO BUTTONS -->
	    <div class="form-group">
	    	<p class="check-p">Would you recommend this app to a friend?</p>
	    	<div class="form-check">
	    		<input type="radio" class="form-check-input" id="yes" value="yes" name="recommend" checked>
		    	<label class="form-check-label" for="yes">Yes</label>
		    </div>
		    <div class="form-check">
		    	<input type="radio" class="form-check-input" id="no" value="no" name="recommend">
			    <label class="form-check-label" for="no">No</label>
		    </div>
		    <div class="form-check">
		    	<input type="radio" class="form-check-input" id="maybe" value="maybe" name="recommend">
			    <label class="form-check-label" for="maybe">Maybe</label>
		    </div>
		    <div class="form-check">
	    		<input type="radio" class="form-check-input" id="notsure" value="notsure" name="recommend">
		    	<label class="form-check-label" for="notsure">Not Sure</label>
		    </div>
	    </div>
	    
	    <!-- CHECK BOXES -->
	    <div class="form-group">
	    	<p class="check-p">Select features you think we should add:</p>
		    <div class="form-check">
  				<input class="form-check-input" type="checkbox" value="profile" id="profile">
  				<label class="form-check-label" for="profile">
  					User Profiles
  				</label>
			</div>
			<div class="form-check">
  				<input class="form-check-input" type="checkbox" value="recover" id="recover">
  				<label class="form-check-label" for="recover">
  					Password Recovery
  				</label>
			</div>
			<div class="form-check">
  				<input class="form-check-input" type="checkbox" value="mobile" id="mobile">
  				<label class="form-check-label" for="mobile">
  					Mobile Version
  				</label>
			</div>
	    </div>
	    
		<!-- TEXT AREA -->
		<div class="form-group" id="text-area">
			<label for="textarea">Other Comments & Suggestions:</label>
			<textarea class="form-control" id="textarea" rows="3"></textarea>
		</div>
		
		<!-- SUBMIT BUTTON -->
		<button id="submit" type="submit" class="btn btn-block btn-lg btn-primary">
			Submit
		</button>
	</form>
</div>
</body>
</html>